}
.adfs-img{
  width: 100%;
  height:100%;
}
.hot{
  padding: 20rpx;
}
.hot-img{
  display: inline-block;
  width: 80rpx;
  height: 70rpx;
}
.article{
  display: inline-flex;
  margin-left: 20rpx;
  width: 80%;
  height: 80rpx;
}
.art-item{
  font-size: 30rpx;
  height: 80rpx;
}
.art-item text{
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.nav{
  /* display: flex;
