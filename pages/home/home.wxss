.content-list .right .p{
  margin-bottom: 5rpx;
}
.content-list .right .title{
  font-size: 15px;
  font-weight: 600;
}
.content-list .right .msg text{
  display: inline-block;
  font-size: 12px;
  color: #666;
  width: 360rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
  box-sizing:border-box;
}
.content-list .right .tab{
  font-size: 12px;
}
.content-list .right .tab view{
  display: inline-block;
  margin-right: 10px;
  padding: 0 10px;
