}
.nav-img{
  width: 100rpx;
  height: 100rpx;
}
.nav-txt{
  display: block;
}
.common-tit{
  font-size: 40rpx;
  margin-top: 40rpx;
  padding-left: 40rpx;
}
.content-wrapper{
  padding: 40rpx;
}

.content-list .item{
  /* display: -webkit-flex; */
